---
layout: base.njk
pagination:
  data: markups
  size: 1
  alias: markup
permalink: /markups/{{ markup.slug | slug }}/index.html
css: /css/markups.css
renderData:
  title: "{{ markup.readme.attributes.name }}"
---
<h2>{{ markup.readme.attributes.name }}</h2>

<div class="Markups">
  <div class="Markups_Demo">
    <div class="Demo">
      <iframe class="Demo_View" srcdoc="{{ markup.html }}<style>{{ markup.css }}</style>"></iframe>
    </div>
  </div>

  <div class="Markups_Readme">
  {{  markup.readme.body | markdown | safe }}
  </div>

  <div class="Markups_Html">
    <div class="CodeBlock">
      <h3 class="CodeBlock_Lang">HTML</h3>
      <div class="CodeBlock_CodeArea">
        <pre><code class="html">{{ markup.html }}</code></pre>
      </div>
      <p class="CodeBlock_Request">
        <a href="https://github.com/geckotang/css-grid-layout-samples/edit/master/src/markups/{{markup.slug}}/index.html">このHTMLへ修正リクエストをする</a>
      </p>
    </div>
  </div>

  <div class="Markups_Css">
    <div class="CodeBlock">
      <h3 class="CodeBlock_Lang">CSS</h3>
      <div class="CodeBlock_CodeArea">
        <pre><code class="css">{{ markup.css }}</code></pre>
      </div>
      <p class="CodeBlock_Request">
        <a href="https://github.com/geckotang/css-grid-layout-samples/edit/master/src/markups/{{markup.slug}}/index.css">このCSSへ修正リクエストをする</a>
      </p>
    </div>
  </div>

</div>


<hr>

<nav>
  <ul>
    <li>
      <a href="/">戻る</a>
    </li>
  </ul>
</nav>

